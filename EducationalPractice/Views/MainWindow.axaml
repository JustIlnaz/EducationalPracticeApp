<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EducationalPractice.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EducationalPractice.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="EducationalPractice">
<DockPanel>

        <StackPanel DockPanel.Dock="Top"  Background="#012326"  Orientation="Horizontal">
            <TextBlock Text="Система управления университетом" FontWeight="Bold" FontSize="25" Margin ="15" FontFamily="Moncerat" Foreground="#A3C9D9" VerticalAlignment="Center"/>
        </StackPanel>
    <Grid Background="#6A9BA6">
        <TabControl Margin="20" BorderBrush="#CCCCCC" BorderThickness="1" >
            <TabItem Header="🎓Студенты">
                <UserControl Name="StudentsView"/>
            </TabItem>
            <TabItem Header="👨‍🏫 Персонал" >
                <UserControl Name="StaffView"/>
            </TabItem>
            <TabItem Header="📚Экзамены">
                <UserControl Name="DepartmentsView"/>
            </TabItem>
        </TabControl>
        </Grid>
    </DockPanel>
    
</Window>
