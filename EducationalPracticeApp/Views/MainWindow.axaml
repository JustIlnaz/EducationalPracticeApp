<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:EducationalPracticeApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EducationalPracticeApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="EducationalPracticeApp"
        MinWidth="400" MinHeight="400" MaxWidth="400" MaxHeight="400">


	<Grid Background="#012326">
		<StackPanel Margin="20" Background="#103B40" >

			<StackPanel HorizontalAlignment="Center" Margin="5">
				<TextBlock Text="Вход"
                           FontWeight="Bold"
                           FontSize="40"
                           Foreground="#A3C9D9" />
			</StackPanel>

			<StackPanel Margin="15">
				<TextBlock Text="Логин:" Foreground="White"/>
				<TextBox x:Name="LoginTB"
                         Background="#346C73"
                         Foreground="White"
                         BorderBrush="#6A9BA6"
                         Margin="0,5,0,0"/>
			</StackPanel>

			<StackPanel Margin="15">
				<TextBlock Text="Пароль:" Foreground="White"/>
				<TextBox x:Name="PasswordTextBox"
                         PasswordChar="*"
                         Background="#346C73"
                         Foreground="White"
                         BorderBrush="#6A9BA6"
                         Margin="0,5,0,0"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
				<Button Content="Войти"
                        Margin="10"
                        FontSize="20"
                        Background="#346C73"
                        Foreground="White"
                        BorderBrush="#6A9BA6"/>

                <Button Content="Войти как гость"
                        Margin="10"
                        FontSize="20"
                        Background="#346C73"
                        Foreground="White"
                        BorderBrush="#6A9BA6"
                        Click="LoginGuest"
                        />
			</StackPanel>

			<TextBlock x:Name="ErrorTextBlock"
                       Foreground="#A3C9D9"
                       HorizontalAlignment="Center"
                       Margin="10"
                       TextWrapping="Wrap"
                       FontWeight="Bold"
                       Text=""/>
		</StackPanel>
	</Grid>
</Window>
