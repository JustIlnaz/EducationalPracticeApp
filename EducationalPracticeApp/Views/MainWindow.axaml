<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:EducationalPracticeApp.ViewModels"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="EducationalPracticeApp.Views.MainWindow"
		x:DataType="vm:MainWindowViewModel"
		Icon="/Assets/avalonia-logo.ico"
		Title="EducationalPracticeApp"
		MinWidth="400" MinHeight="400" MaxWidth="500" MaxHeight="400"
		WindowStartupLocation="CenterScreen">

	<Grid Background="#012326">

		<Border Margin="20"
				Background="#103B40"
				CornerRadius="25"
				Padding="30">

			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

				<TextBlock Text="Вход"
						   FontWeight="Bold"
						   FontSize="40"
						   Foreground="#A3C9D9"
						   Margin="0,0,0,20"/>

				<StackPanel Orientation="Vertical" Margin="0,0,0,15" Width="280">
					<TextBlock Text="Логин:" Foreground="White" Margin="0,0,0,5"/>
					<TextBox x:Name="LoginTB"
							 Background="#346C73"
							 Foreground="White"
							 BorderBrush="#6A9BA6"
							 CornerRadius="15"
							 Padding="10,5"
							 Height="35"/>
				</StackPanel>

				<StackPanel Orientation="Vertical" Margin="0,0,0,25" Width="280">
					<TextBlock Text="Пароль:" 
							   Foreground="White" 
							   Margin="0,0,0,5"/>
					<TextBox x:Name="PasswordTextBox"
							 PasswordChar="*"
							 Background="#346C73"
							 Foreground="White"
							 BorderBrush="#6A9BA6"
							 CornerRadius="15"
							 Padding="10,5"
							 Height="35"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">

					<Button Content="Войти"
							FontSize="18"
							Background="#2A5E65"
							Foreground="#FFFFFF"
							BorderBrush="#6A9BA6"
							BorderThickness="2"
							CornerRadius="15"
							Padding="20,10"
							Width="185"
							Cursor="Hand"/>

					<Button Content="Войти как гость"
							FontSize="18"
							Background="#2A5E65"
							Foreground="#FFFFFF"
							BorderBrush="#6A9BA6"
							BorderThickness="2"
							Click="LoginGuest"
							CornerRadius="15"
							Padding="20,10"
							Width="185"
							Cursor="Hand"/>
				</StackPanel>

				<TextBlock x:Name="ErrorTextBlock"
						   Foreground="#A3C9D9"
						   HorizontalAlignment="Center"
						   Margin="0,20,0,0"
						   TextWrapping="Wrap"
						   FontWeight="Bold"
						   Text=""/>
			</StackPanel>
		</Border>
	</Grid>
</Window>