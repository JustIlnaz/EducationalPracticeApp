<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EducationalPracticeApp.DisciplineUserControl">
	<Grid Background="#012326">
		<DataGrid IsReadOnly="True" x:Name="DataDiscipline" >
			<DataGrid.Columns>
				<DataGridTextColumn Header="Код" Binding="{Binding CourseId}"/>
				<DataGridTextColumn	Header="Объем" Binding="{Binding Workload} "/>
				<DataGridTextColumn Header="Название" Binding="{Binding Title}" />
				<DataGridTextColumn Header="Исполнитель" Binding="{Binding DeptCode}" />
			</DataGrid.Columns>
		</DataGrid>
	</Grid>
</UserControl>
